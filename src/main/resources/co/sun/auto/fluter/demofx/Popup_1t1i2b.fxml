<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.Popup1T1I2B">
    <!-- Bố cục chính -->
    <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Tiêu đề -->
        <Label fx:id="label" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Nhập mã PIN (6 ký tự)" />

        <!-- Trường nhập mã PIN -->
        <PasswordField fx:id="inputField" alignment="CENTER" maxWidth="250" promptText="••••••" style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <!-- Các nút -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10px;">
            <!-- Nút Thoát -->
            <Button fx:id="leftBtn" onAction="#onLeftBtnClick" style="-fx-background-color: #e57373; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Thoát" />
            <!-- Nút Xác nhận -->
            <Button fx:id="rightBtn" onAction="#onRightBtnClick" style="-fx-background-color: #64b5f6; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Xác nhận" />
        </HBox>

    </VBox>
</AnchorPane>
