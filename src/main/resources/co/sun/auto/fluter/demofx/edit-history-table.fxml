<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.EditHistoryTable">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Lịch sử chỉnh sửa" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn text="STT" fx:id="colSTT" prefWidth="50.0" />
                <TableColumn text="Thông tin cũ" fx:id="colOldInfo" prefWidth="130.0" />
                <TableColumn text="Thông tin mới" fx:id="colNewInfo" prefWidth="130.0" />
                <TableColumn text="Ngày chỉnh sửa" fx:id="colEditDate" prefWidth="130.0" />
                <TableColumn text="Người chỉnh sửa" fx:id="colEditor" prefWidth="130.0" />
            </columns>
        </TableView>
        <Button text="Thoát" fx:id="exitButton" onAction="#handleExit" />
    </VBox>
</AnchorPane>
