<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="688.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.CardNoInfo">
    <children>
        <!-- Main Container -->
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20; -fx-border-color: #333333; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10;">
            <!-- Row 1: Avatar and Fields -->
            <HBox alignment="CENTER" spacing="30">
                <!-- Avatar -->
                <ImageView fx:id="avatarImage" fitHeight="100.0" fitWidth="100.0" style="-fx-border-color: #999999; -fx-border-width: 2; -fx-background-color: #eeeeee; -fx-border-radius: 5;" />
            </HBox>
         <Label text="Thẻ trắng!" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="30.0" />
            </font>
         </Label>

            <!-- Row 2: Buttons -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="btnCreatteInfo" onAction="#onCreateInfoClick" style="-fx-text-fill: black; -fx-font-size: 16px;" text="Tạo thông tin" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
