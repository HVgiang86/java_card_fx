<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.HelloController">
    <!-- Bố cục chính -->
    <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Tiêu đề -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Thiết lập mã PIN" />
      <TextField fx:id="pinField1" alignment="CENTER" layoutX="85.0" layoutY="125.0" maxWidth="250" promptText="Nhập mã PIN mới" style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <!-- Trường nhập mã PIN -->
        <TextField fx:id="pinField" alignment="CENTER" maxWidth="250" promptText="Nhập lại mã PIN mới" style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <!-- Các nút -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10px;">
            <!-- Nút Thoát -->
            <Button fx:id="btnExit" style="-fx-background-color: #e57373; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Thoát" />
            <!-- Nút Xác nhận -->
            <Button fx:id="btnConfirm" style="-fx-background-color: #64b5f6; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Xác nhận" />
        </HBox>

    </VBox>
</AnchorPane>
