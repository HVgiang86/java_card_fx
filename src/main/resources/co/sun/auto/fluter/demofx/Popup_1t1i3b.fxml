<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.Popup1T1I3B">
    <!-- Bố cục chính -->
    <VBox alignment="CENTER" prefHeight="250" prefWidth="450" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Thông báo -->
        <Label fx:id="label" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Bạn đã nhập sai mã PIN, vui lòng thử lại" />

        <!-- Ô nhập mã PIN -->
        <TextField fx:id="inputField" maxWidth="300" promptText="Nhập mã PIN" style="-fx-font-size: 14px; -fx-padding: 10px;" />

        <!-- HBox chứa các nút -->
        <HBox alignment="CENTER" spacing="15">
            <!-- Nút Thoát -->
            <Button fx:id="leftBtn" onAction="#onLeftBtnClick" style="-fx-background-color: #e57373; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Thoát" />
            <!-- Nút Xác nhận -->
            <Button fx:id="middleBtn" onAction="#onMiddleBtnClick" style="-fx-background-color: #64b5f6; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Xác nhận" />
            <!-- Nút Cấp lại mã PIN -->
            <Button fx:id="rightBtn" onAction="#onRightBtnClick" style="-fx-background-color: #81c784; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Cấp lại mã PIN" />
        </HBox>
    </VBox>
</AnchorPane>
