<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="co.sun.auto.fluter.demofx.view.viewcontroller.HomeController" style="-fx-background-color: #f5f5f5;">
    <!-- Bố cục chính -->
    <VBox alignment="CENTER" spacing="15" prefWidth="450" prefHeight="250" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Thông báo -->
        <Label text="Bạn đã nhập sai mã PIN, vui lòng thử lại" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Ô nhập mã PIN -->
        <TextField fx:id="pinTextField" promptText="Nhập mã PIN" style="-fx-font-size: 14px; -fx-padding: 10px;" maxWidth="300" />

        <!-- HBox chứa các nút -->
        <HBox alignment="CENTER" spacing="15">
            <!-- Nút Thoát -->
            <Button text="Thoát" fx:id="btnExit" style="-fx-background-color: #e57373; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" />
            <!-- Nút Xác nhận -->
            <Button text="Xác nhận" fx:id="btnConfirm" style="-fx-background-color: #64b5f6; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" />
            <!-- Nút Cấp lại mã PIN -->
            <Button text="Cấp lại mã PIN" fx:id="btnResetPin" style="-fx-background-color: #81c784; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10px 20px;" />
        </HBox>
    </VBox>
</AnchorPane>
